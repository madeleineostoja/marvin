{
  "compilerOptions": {
    "strict": true,
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "lib": ["esnext"],
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowArbitraryExtensions": true,
    "allowImportingTsExtensions": true
  }
}
